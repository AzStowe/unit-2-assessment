<!DOCTYPE html>
<html>
  <head>
    <title>Unit 2 Assessment</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>
    <% if (todos.length) { %>
  <ul>
    <% todos.forEach(function(t, id) { %>
    <li>
      <%= t.todo %> - <%= t.done ? 'done' : 'not done' %>

  </li>
    <% }); %>
  </ul>
  <%} else { %>
  <h3>No To Dos yet! </h3>
  <% } %>

  <hr>
  <form action="/" method="POST">
    <input type="text" name="todo" placeholder="Add To Do">
    <button type="submit">Add To Do</button>
  </form>

  </body>
</html>
